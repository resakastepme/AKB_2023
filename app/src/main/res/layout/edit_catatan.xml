<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/orange"
        android:id="@+id/rel1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Catatan"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_margin="10dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel1"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanggal"
            android:id="@+id/textTanggal"
            android:textAlignment="center"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_below="@id/textTanggal"
            android:id="@+id/textJudul"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textJudul"
            android:id="@+id/inputJudulEdit"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Catatan"
            android:layout_marginTop="10dp"
            android:layout_below="@id/inputJudulEdit"
            android:id="@+id/textCatatan"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCatatan"
            android:id="@+id/inputCatatanEdit"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputCatatanEdit"
            android:layout_marginTop="20dp"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="100dp"
            android:text="Update"
            android:id="@+id/btnUpdate"/>



    </RelativeLayout>
</RelativeLayout>